void lina(byte baris) {
  digitalWrite(POW1,0);
  digitalWrite(POW2,1);
  digitalWrite(POW3,1);
  byte pin = 2;
  for (byte kolom = 0; kolom < 8; ++ kolom) {
    digitalWrite(pin,pin_7segmen[baris][kolom]);
    ++pin;
 }
}

void rahmi(byte baris) {
  digitalWrite(POW1,1);
  digitalWrite(POW2,0);
  digitalWrite(POW3,1);
  byte pin = 2;
  for (byte kolom = 0; kolom < 8; ++ kolom) {
    digitalWrite(pin,pin_7segmen[baris][kolom]);
    ++pin;
 }
}

void tika(byte baris) {
