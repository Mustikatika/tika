  digitalWrite(POW2,1);
  digitalWrite(POW3,0);
  byte pin = 2;
  for (byte kolom = 0; kolom < 8; ++ kolom) {
    digitalWrite(pin,pin_7segmen[baris][kolom]);
    ++pin;
 }
}
